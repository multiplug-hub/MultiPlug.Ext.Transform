@model MultiPlug.Base.Http.EdgeApp
@functions
{
    string isEnabled(bool? theValue)
    {
        return (theValue.Value) ? "checked" : "";
    }
}
<form action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded" autocomplete="off" spellcheck="false">
    <section class="row-fluid">
        <div class="row-fluid">
            <div class="box">
                <div class="span3">
                    <a style="line-height: 52px;" href="#"><img alt="Transform Logo" src="@Raw(Model.Context.Paths.Assets)images/transform.png"></a>
                </div>
                <div class="span6">
                    <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">Regular Expression Tester</p>
                </div>
                <div class="span3" style="text-align: right;">
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="box non-collapsible">
                <h4>Settings</h4>
                <div class="row-fluid">
                    <div class="well">
                        <div class="row-fluid">
                            <div class="span10">
                                <div class="row-fluid"><div class="span12">Pattern</div></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <input name="Pattern" class="span12" type="text" placeholder="Pattern" value="@Model.Extension.Model.Pattern">
                                    </div>
                                </div>
                            </div>
                            <div class="span2">
                                <div class="row-fluid"><div class="span12">Ignore Case</div></div>
                                <div class="row-fluid">
                                    <div class="span12 input-append">
                                        <input type="checkbox" name="IgnoreCase" value="true" @Raw(isEnabled(Model.Extension.Model.IgnoreCase))>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span10">
                                <div class="row-fluid"><div class="span12">Test String</div></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <input name="TestString" class="span12" type="text" placeholder="Test String" value="@Model.Extension.Model.TestString">
                                    </div>
                                </div>
                            </div>
                            <div class="span2">
                                <div class="row-fluid"><div class="span12"></div></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <button type="submit" value="submit" class="btn btn-blue">Run</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h4>Matches</h4>
                <div class="row-fluid">
                    <div class="well">
                        <div class="row-fluid">
                            <div class="span12">
                                <ol>
                                    @foreach (var Match in @Model.Extension.Model.Matches)
                                    {
                                        <li>@Match</li>
                                    }
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
